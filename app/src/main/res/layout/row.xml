<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/button"
    app:cardCornerRadius="3dp"
    app:cardElevation="3dp"
    app:contentPadding="5dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/background">

        <TextView
            android:id="@+id/rtitletv"
            android:text="Title"
            android:textColor="#0F0F0F"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:layout_marginTop="40dp"
            android:layout_alignTop="@id/rtitletv"

            android:layout_marginRight="240dp"
            android:layout_marginBottom="40dp"
            android:id="@+id/rimagetv"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Price"
            android:textSize="30sp"
            android:layout_marginTop="60dp"
            android:layout_marginLeft="154dp"
            android:layout_marginRight="140dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/risbntv"
            android:text="isbn"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="90dp"
            android:layout_marginLeft="154dp"
            android:layout_marginRight="140dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rcata"
            android:text="catagory"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="120dp"
            android:layout_marginLeft="154dp"
            android:layout_marginRight="140dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rcatagorytv"
            android:text="catagory"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="140dp"
            android:layout_marginLeft="154dp"
            android:layout_marginRight="140dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rpricetv"
            android:text="price"
            android:textSize="20sp"
            android:layout_marginTop="240dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rdescriptiontv"
            android:text="desc"
            android:layout_marginTop="210dp"
            android:textSize="20sp"/>
        <!--<Button-->
            <!--android:layout_width="50dp"-->
            <!--android:layout_height="50dp"-->
            <!--android:onClick="addtocart"-->
            <!--android:text=""-->
            <!--android:textColor="#F0DA96"-->
            <!--android:id="@+id/addtocartbtn"-->
            <!--android:background="@drawable/ic_add_shopping_cart_black_24dp"-->
            <!--android:layout_marginTop="130dp"-->
            <!--android:layout_marginLeft="290dp"/>-->

    </RelativeLayout>

</android.support.v7.widget.CardView>